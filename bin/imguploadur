#!/usr/bin/env php
<?php

require_once __DIR__.'/../vendor/autoload.php';

use Imguploadur\Imguploadur;

$imguploadur = new Imguploadur();

array_shift($argv);

if (count($argv) == 0 || $argv[0] == "help") {
    echo "Usage: " . basename(__FILE__) . " filename\n";
    exit(1);
}

$imguploadur->upload(...$argv);
